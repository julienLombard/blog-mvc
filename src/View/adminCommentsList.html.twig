{% extends 'adminTemplate.html.twig' %}

{% block body %}

  <!-- Posts List Section -->
  <section id="portfolio">
    <div class="container">

      <!-- Title -->
      <div class="row section-title text-center center">
        <h2>Commentaires</h2>
        <hr>
        <!-- Buttons -->
        <div class="col-sm-6 col-md-offset-3 col-md-3 col-lg-offset-3 col-lg-3">
          <p>
          <a class="btn btn-primary" href="/admin/show-invalidated"><i class="fa fa-check"></i>Commentaires non validés</a>
          </p>
        </div>
        <div class="col-sm-6 col-md-3 col-lg-3">
          <p>
          <a class="btn btn-primary" href="/admin/show-reported"><i class="fa fa-exclamation-triangle"></i>Commentaires signalés</a>
          </p>
        </div>
      </div> <!-- End Row-->

      <!-- Posts List -->
      <div class="row">
        <div class="portfolio-items">

          <!-- Posts Loop -->
          {% for post in posts %}
          
              <div class="col-sm-6 col-md-3 col-lg-3 web">
                  <div class="portfolio-item">
                      <div class="hover-bg">
                        <a href="/admin/comments-post/{{ post.id }}">
                            <div class="hover-text">
                              <h4>{{ post.title }}</h4>
                              <p>{{ post.content|striptags| truncate(60, false, '...')  }}</p>
                            </div>
                            <img src="{{ app.request.basepath }}/img/portfolio/post-{{ post.id }}.jpg" class="img-responsive" alt="Project Title"> 
                        </a> 
                      </div>
                  </div>
              </div>

          {% endfor %}

        </div> 
      </div> <!-- End Row -->

      <!-- Pagination -->
      <div class="row">
        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <li class="page-item">
              <a class="page-link" href="/admin/comments?page=1" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
              </a>
            </li>

            <!-- Pagination Loop-->
            {% for i in 1..pageCount %}
              <li class="page-item"><a class="page-link" href="/admin/comments?page={{ i }}">{{ i }}</a></li>
            {% endfor %}

            <li class="page-item">
              <a class="page-link" href="/admin/comments?page={{ pageCount }}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
              </a>
            </li>
          </ul>
        </nav>
      </div> <!-- End Row -->

    </div> <!-- End Posts List Container -->
  </section> <!-- End Portfolio Section -->
    
{% endblock %}