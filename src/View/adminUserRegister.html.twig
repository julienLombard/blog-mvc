{% extends 'homeTemplate_2.html.twig' %}

{% block body %}

<!-- Register Section -->
<section id="post" class="text-center">
  <div class="container">
    <div class="section-title center">
      <h2>Inscription</h2>
      <hr>
    </div>

    <div class="col-md-8 col-md-offset-2">
      <!-- Form Alert Display -->
      {% if alert == 1 %}
        <p class="green"> Votre inscription a été prise en compte !</p>
        <p class="green"> Vous pourrez vous connecter dès que votre inscription aura été validé par l'administrateur.</p>
      {% elseif alert == 2 %}
        <p class="red"> Veillez remplir tous les champs du formulaire !</p>
      {% endif %}

      <!-- Register Form -->
      <form action="/register" method="post">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <div class="form-group">
              <label for"login">Identifiant :</label>
              <input type="text" name="login" id="login" class="form-control">
            </div>
            <div class="form-group">
              <label for"password">Mot de passe :</label>
              <input type="password" name="password" id="password" class="form-control">
            </div>
          <input type="submit" class="btn btn-default" name="submit" value="Inscription">
          </div>
        </div>
      </form>

    </div>
  </div> <!-- End Container -->
</section> <!-- End Connection Section -->
    
{% endblock %}