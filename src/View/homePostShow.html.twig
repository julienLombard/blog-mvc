{% extends 'homeTemplate_2.html.twig' %}

{% block body %}

  <!-- Post Section -->
  <div id="post">
    <div class="container">
      <div class="row section-title text-center center">
        <h2>{{ post.title }}</h2>
        <hr>
        <p>publication: {{ post.publicationDate|date('d/m/Y') }} - modification: {{ post.modificationDate|date('d/m/Y') }}</p>
        <div class="col-md-12 text-center"><img src="{{ app.request.basepath }}/img/portfolio/post-{{ post.id }}.jpg" class="img-responsive">
        </div>
        <div class="col-md-8 col-md-offset-2">
          <div class="post-text">
            <p>{{ post.content }}</p>
            <p class="text-center"><a class="btn btn-primary" href="#"><i class="fa fa-link"></i> Lien vers le site</a> <a class="btn btn-primary" href="/home#portfolio"><i class="fa fa-home"></i> Retour Portfolio</a></p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Comments List -->
    <div class="container text-center center">
      <h3>Commentaires</h3>
      <hr>
    {% for comment in comments %}
      {% if comment.validate == 1 %}    
        <div  class="row text-center center">
          <div class="col-md-8 col-md-offset-2">
            <div class="post-text">
              <p>"{{ comment.content }}"</p>
              <p>{{ comment.author }} - publication: {{ comment.publicationDate|date('d/m/Y') }} - modification: {{ comment.modificationDate|date('d/m/Y') }}</p>
              <p><a href="/reported-comment/{{ post.id }}/{{ comment.id }}"><i class="fa fa-exclamation-triangle"></i> signaler le commentaire</a></p>  
              <hr>
            </div>
          </div>
        </div>
      {% endif %}
    {% else %}
    {% endfor %}

    <!-- Pagination -->
    <div class="row text-center">
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          <li class="page-item">
            <a class="page-link" href="/post/{{ id }}?page={{ page -1 }}" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
              <span class="sr-only">Previous</span>
            </a>
          </li>
          {% for i in 1..pageCount %}
            <li class="page-item"><a class="page-link" href="/post/{{ id }}?page={{ i }}">{{ i }}</a></li>
          {% endfor %}
          <li class="page-item">
            <a class="page-link" href="/post/{{ id }}?page={{ page +1 }}" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
              <span class="sr-only">Next</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>

    <!-- Comment Form -->
    <div  class="row">
      <div class="col-md-8 col-md-offset-2 text-center center">
          <h3>Poster un Commentaire</h3>
          </br>
          <hr>     
        <form action="/create-comment-post/{{ post.id }}" method="post">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <input type="hidden" name="postId" value="{{ post.id }}">
                <input type="hidden" name="pageNb" value="{{ page }}">
                <label for"author">Auteur :</label>
                <input type="text" name="author" id="author" class="form-control">
              </div>
            </div>

          </div>
          <div class="form-group">
            <label for"content">Commentaire :</label>
            <textarea name="content" id="content" class="form-control" rows="4"></textarea>
          </div>
          <input type="submit" class="btn btn-default" value="Poster"> 
        </form>
        </br>
      </div>
    </div>

  </div>
  </div> 

{% endblock %}