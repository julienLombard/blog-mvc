{% extends 'adminTemplate.html.twig' %}

{% block body %}

<!-- Edit Section -->
<div id="post" class="text-center">
  <div class="container">
    <div class="section-title center">
      <h2>Modification</h2>
      <hr>
    </div>

    <div class="col-md-8 col-md-offset-2">

      <form action="/admin/update-comment/{{ post }}/{{ comment.id }}" method="post">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for"author">Titre :</label>
              <input type="text" name="author" id="author" class="form-control" value="{{ comment.author}}">
            </div>
          </div>

        </div>
        <div class="form-group">
          <label for"content">Contenu :</label>
          <textarea name="content" id="content" class="form-control" rows="4">{{ comment.content }}</textarea>
        </div>
        <input type="submit" class="btn btn-default" value="Modifier"> 
        <a class="btn btn-primary" href="/admin/comments-post/{{ post }}"><i class="fa fa-newspaper-o"></i> Retour Liste</a></p>
      </form>
    </div>
  </div>
</div>
    
{% endblock %}